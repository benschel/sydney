<div id="user-profile-container">
    <div class="profile-header">
        <% if @user.id == @user.get_user_most_mentions %>
            <div class="stars">
                <% 3.times do %>
                    <span class="star-icon fa fa-star"></span>
                <% end %>
            </div>
        <% end %>

        <div class="user-profile-photo-container">
            <img class="user-profile-photo" src="<%= user_photo_path(@user.photo_url) %>" />
        </div>
        <h1 class="user-name"><%= @user.name %></h1>
        <a href="<%= new_mention_path(@user.id) %>" class="button button-primary">Give Mention</a>
    </div>

    <h4 class="all-mentions-header">&mdash; <%= pluralize(@user.mentions.count, 'Mention') %> &mdash;</h4>
    <ul class="user-mentions-container">
        <% @user.mentions.each do |mention| %>
            <%= render partial: "partials/user_mentions", locals: {mention: mention} %>
        <% end %>
    </ul>
</div>